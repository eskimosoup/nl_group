<%= render 'optimadmin/shared/header/main_title', title: 'Manage Available Roles' %>
<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Available Role', object: AvailableRole, path: new_available_role_path %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <!-- <%= render 'optimadmin/shared/module/index/order', options: [['Title', 'title', 'Display', 'display']] %> -->
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @available_roles.size, path: root_url %>
  </div>
  <div class="row collapse module-list-index header">
    <%= list_item 'large-1 hide-for-medium-down' do %>
      <%= link_to octicon('settings') %>
    <% end %>
    <%= list_item 'large-8 small-8' do %>
      <%= link_to octicon('chevron-down'), '#', class: 'helper-link index-list-expand-all', data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Title
    <% end %>
    <%= list_item { 'Display' } %>
    <%= list_item { 'Edit' } %>
    <%= list_item('large-1 hide-for-medium-down text-center last') { 'Delete' } %>
  </div>
  <div class="module-sortable" data-module="AvailableRole">
    <%= render partial: 'available_role', collection: @available_roles, as: :available_role_presenter %>
  </div>
  <%= paginate @available_roles %>
  <%= pagination_helper(@available_roles_items, 'available role') %>
</div>
